{
  "restartable": "rs",
  "ignore": [
    "node_modules"
  ],
  "verbose": true,
  "execMap": {
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "server/",
    "dist/",
    "image/"
  ],
  "env": {
    "NODE_ENV": "prod",
    "NODE_PATH":"./server"
  },
  "ext": "js json"
}
