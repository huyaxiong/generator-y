{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2015", "dom"],
    "outDir": "js",
    "typeRoots": [
      "../../node_modules/@types/"
    ]
  },
  "exclude": [
    "ts/bootstrap.jit.ts",
    "ts/wechat/follower",
    "aot",
    "node_modules",
    "server"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true
  }
}