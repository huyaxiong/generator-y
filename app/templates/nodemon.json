{
  "restartable": "rs",
  "ignore": [
    ".git",
    "server/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "npm start"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "server/",
    "client/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
