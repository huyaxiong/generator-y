{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules",
    "client/ts",
    "client/scss"
  ],
  "verbose": true,
  "execMap": {
    "js": ""
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "server/",
    "client/"
  ],
  "env": {
    "NODE_ENV": "prod",
    "NODE_PATH":"./server"
  },
  "ext": "js json"
}
