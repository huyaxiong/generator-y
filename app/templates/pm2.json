{
  "name": "yx",
//  "cwd"              : "server",
//  "args"             : [""],
  "script": "server/main.js",
  //  "node_args"        : ["--harmony", " --max-stack-size=102400000"],
  "log_date_format": "YYYY-MM-DD HH:mm Z",
  "error_file": "logs/err.log",
  "out_file": "logs/std.log",
  "pid_file": "logs/y.pid",
  "instances": 1,
  //or 0 => 'max'
  "min_uptime": "200s",
  // 200 seconds, defaults to 1000
  "max_restarts": 10,
  // defaults to 15
  "max_memory_restart": "1M",
  // 1 megabytes, e.g.: "2G", "10M", "100K", 1024 the default unit is byte.
  "cron_restart": "1 0 * * *",
  "watch": true,
  "ignore_watch": [
    "node_modules"
  ],
  "merge_logs": true,
  "exec_interpreter": "node",
  "exec_mode": "fork",
  "autorestart": false,
  // enable/disable automatic restart when an app crashes or exits
  "vizion": false,
  // enable/disable vizion features (versioning control)
  // Default environment variables that will be injected in any environment and at any start
  "env": {
    "NODE_ENV": "production",
    "NODE_PATH":"./server"
  }
}
